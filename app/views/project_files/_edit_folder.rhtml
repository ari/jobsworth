<fieldset id="new_folder">
<legend><%=_ 'Edit Folder' %></legend>

<%= form_remote_tag :url => {:action => 'update_folder', :id => @folder },
                                   :loading => "Element.show('loading');",
                                   :complete => "Element.hide('loading');"

 %>
  <%= render_partial "form_folder" %>
  <%= submit_tag _("Update"), :class => 'nolabel' %>
<% end_form_tag %>

</fieldset>
