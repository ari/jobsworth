
<!--[form:project_files]-->
<% if @file.project_id.nil? %>
<label for="file_project_id"><%=_ 'Project' %></label><%= select 'file', 'project_id', current_user.projects.where("completed_at IS NULL").except(:order).order('name').collect {|c| [ c.name, c.id ] } %><br/>
<% else %>
<%= hidden_field 'file', 'project_id' %>
<% end %>
<label>&nbsp;</label>
<br/>
<span id="upload_container">
<label for="file_name"><%=_ 'Name' %></label><input type="text" name="file_names[]"/><br />
<label for="file_file"><%=_ 'File', 1 %></label><input type="file" size="35" name="tmp_files[]"/>
<div class="buttons"><small>
  <%= link_to_function _("Upload more files"), 
      "jQuery('#upload_container').append('<label for=\"file_name\">#{_'Name'}</label><input type=\"text\" name=\"file_names[]\"/><br /><label for=\"file_file\">#{_ 'File', 1}</label><input type=\"file\" size=\"35\" name=\"tmp_files[]\"/><br />')"
  %>
</small></div><br />
</span>

<%= hidden_field 'file', 'project_folder_id' %>
