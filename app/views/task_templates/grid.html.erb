<table class="content" width="100%" style="padding-left:1em; padding-right:1em;" cellpadding="0" cellspacing="0">
  <tr>
    <td colspan="4" class="page_header">
      <div style="float:left;"><%=_ 'Task Templates' %></div>
      <div style="float:right;padding-top:0.15em;"><%= link_to _('New Template'), :action => 'new' %></div>
    </td>
  </tr>


  <tr colspan="4">
    <td>
      <ul>
        <% current_templates.each do |template| %>	
          <li>
            <%= link_to template, :controller=>'task_templates', :action=>'edit',:id=>template.task_num %>	   
	    <div style="float:right;" class="task-action">
	    <%= link_to(image_tag("cross_small.png", :border => 0, :title => _("Delete %s",template.name ), :class => "jtooltip"),
		{ :controller => 'task_templates', :action => 'destroy', :id => template}, :confirm => _("Are you sure?")) %>
            </div>
          </li>
        <% end %>
      </ul>
    </td>
  </tr>
</table>

<br />


