<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs
     title="ClockingIT"
     author="Erlend Simonsen"
     author_email="admin@clockingit.com"
     author_affiliation="ClockingIT.com"
     description="Show top/new tasks and some graphs from your Jobsworth account."
     screenshot="http://www.clockingit.com/iGoogle.png"
     thumbnail="http://www.clockingit.com/iGoogle_thumb.png"
     title_url="http://www.clockingit.com"
     author_location="Oslo, Norway"
     author_link="http://www.fudgie.org"
     singleton="false"
     >
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <UserPref name="uid" datatype="string" display_name="Widget Key (PreferencesPage)" required="true" />

  <UserPref name="show_mine" display_name="Display" default_value="My Tasks" datatype="enum">
    <EnumValue value="My Tasks"/>
    <EnumValue value="All Tasks"/>
  </UserPref>

  <UserPref name="show_order" display_name="Type" default_value="Top Tasks" datatype="enum">
    <EnumValue value="Top Tasks"/>
    <EnumValue value="Newest Tasks"/>
    <EnumValue value="Resolution Pie-Chart"/>
    <EnumValue value="Priority Pie-Chart"/>
    <EnumValue value="Project Pie-Chart"/>
  </UserPref>

  <UserPref name="show_number" display_name="Number of Tasks" default_value="5" datatype="enum">
    <EnumValue value="1"/>
    <EnumValue value="2"/>
    <EnumValue value="3"/>
    <EnumValue value="4"/>
    <EnumValue value="5"/>
    <EnumValue value="6"/>
    <EnumValue value="7"/>
    <EnumValue value="8"/>
    <EnumValue value="9"/>
    <EnumValue value="10"/>
  </UserPref>

  <Content type="url" href="http://www.<%= Setting.domain %>/feeds/igoogle_feed" />
</Module>
