<div id="nextTasks" class="section" >
  <a class="collapsable-sidepanel-button">&nbsp;</a>
  <div class="page_header tooltip">
    <div>Next tasks</div>
  </div>
  <div class="panel_content">
    <ul>
          <% count = 5 if ( count.nil? || count < 5) %>
           <% nextTask = nextTasks(count) %> <% unless nextTask.nil? %> 
            <% for task in nextTask %>
              <li><%= link_to "##{task.task_num} #{task.name}", task_view_path(task.task_num), 'data-taskid' => task.id %></li>
            <% end %>
           <% end %>
    </ul>
    <div id="nextTasks_more"><a href ='#'>More...</a></div>
  </div>
</div>