<%= hidden_field("task", "id") %>
<%= error_messages_for 'task' %>
<div id="task_sidebar">
  <small><%= link_to(@task.issue_num, edit_task_path(@task.task_num)) %><span class="right"><%= "created " + time_ago_in_words(@task.created_at) + " ago" unless @task.created_at.nil?%></span></small>
  <%= render(:partial => "tasks/details") %>
  <%= render(:partial => "tasks/attributes") %>
  <%= render(:partial => "tasks/notifications") %>
  <% if !@task.new_record? -%>
    <%= render(:partial => "work_times") %>
  <% end -%>
  <%= render(:partial => "dependencies") %>
  <%= render(:partial => "attachments") %>
  <%= render(:partial => "resources") %>
</div>
<div id="task_addcomment">
  <div>
    <%= render(:partial => "new_comment") %>
  </div>

    <div class="page_header">
      <%= _("To-do") %>
      <span id="todo-status-<%= @task.dom_id %>">
        <%= render :partial => "/todos/todos_status", :locals => {:task => @task} %>
      </span>
    </div>
    <div id="todo-container" class="todo-container">
      <%= render :partial => @task.new_record? ? "/todos/todos_clone" : "/todos/todos" %>
    </div>

  <div id="task_history">
    <%= render(:partial => "tasks/history") %>
  </div>
</div>
