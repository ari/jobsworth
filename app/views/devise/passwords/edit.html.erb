<% @page_title = "Reset Password - #{Setting.productName}" %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal well span6 center" }) do |f| %>
  <legend>Change your password</legend>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="control-group">
    <%= f.label :password %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Change my password", :class => "btn" %>
  </div>
<% end %>