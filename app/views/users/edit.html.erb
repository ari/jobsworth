<% @page_title = "User : #{@user.name} - #{$CONFIG[:productName]}" %>

<% content_for :navigation do %>
  <%= render :partial => "users/navigation", :locals => {:selected => "general", :user => @user} %>
<% end %>

<legend>
  <%= @user.name %>
  <%= link_to_tasks_filtered_by(_("View Tasks"), @user, :class => "btn btn-success pull-right") %>
</legend>

<%= form_tag(user_path(@user), :method => :put, :class => "form-horizontal", :multipart => true) do %>
  <%= render :partial => "form" %>
  <div class="form-actions">
    <%= submit_tag _("Save"), :class => 'btn btn-primary' %>
    <%= link_to "delete", user_path(@user), :method => :delete, :confirm => _("Are you sure?"), :class => "btn btn-mini btn-danger pull-right" %>
  </div>
<% end %>

