<table class="content" width="100%" style="padding-left: 1em; padding-right: 1em;" cellpadding="0" cellspacing="0">
  <tr>
    <td class="page_header">
      <div style="float:left;"><%=_ 'Users' %></div>
      <div style="float:right;padding-top:0.1em;"><%= link_to _('New User'), :action => 'new' %></div>
    </td>
  </tr>
  <tr>
    <td>
      <% for @user in @users %>
        <%= render :partial => "user" %>
      <% end %>
    </td>
  </tr>
  <tr><td><%= will_paginate(@users, { :next_label => _('Next') + ' &raquo;', :prev_label => '&laquo; ' + _('Previous') }) %></td></tr>
</table>


